   <collection name="tuttle-sample-gitlab">
        <type>gitlab</type>
        <baseurl>https://gitlab.com/api/v4/</baseurl>
        <owner>line-o</owner>
        <repo>tuttle-sample-data</repo>
        <project-id>50872175</project-id>
        <token>XXX</token>
        <ref>main</ref>
        <hookuser>admin</hookuser>
        <hookpasswd></hookpasswd>
