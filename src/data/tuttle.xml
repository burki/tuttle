  </blacklist>
  
  
  <config prefix="/db/apps/" suffix="-stage" lock="git-lock.xml" apikeys="/db/system/auth/tuttle-token.xml">
    <sm user="nobody" group="nogroup" mode="rw-r--r--"/>
  </config>
